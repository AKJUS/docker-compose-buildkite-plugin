#!/bin/bash
set -ueo pipefail

DIR="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd)"

. "$DIR/../lib/shared.bash"

if [[ ! -z "$(plugin_read_config BUILD)" ]]; then
  . "$DIR/commands/build.sh"
elif [[ ! -z "$(plugin_read_config RUN)" ]]; then
  . "$DIR/commands/run.sh"
else
  echo "+++ Docker Compose plugin error"
  echo "No build or run options were specified"
  exit 1
fi
